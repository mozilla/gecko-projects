{
  "manifest_version": 2,
  "name": "Web Compat",
  "description": "Urgent post-release fixes for web compatibility.",
  "version": "4.2.0",

  "applications": {
    "gecko": {
      "id": "webcompat@mozilla.org",
      "strict_min_version": "59.0b5"
    }
  },

  "experiment_apis": {
    "aboutConfigPrefs": {
      "schema": "aboutConfigPrefs.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "aboutConfigPrefs.js",
        "paths": [["aboutConfigPrefs"]]
      }
    },
    "aboutPage": {
      "schema": "aboutPage.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "aboutPage.js",
        "events": ["startup"]
      }
    }
  },

  "content_security_policy": "script-src 'self' 'sha256-HbSjs39Y0thRGfO3RHrNzLPKyC/tq6FdIuP3jEBAcJQ='; default-src 'self'; base-uri moz-extension://*;",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background.js",
      "injections.js",
      "ua_overrides.js"
    ]
  }
}
